	<script>		
		function addNumber(num1, num2){ 								
			var sum = num1 + num2;			
			return sum;
		}
		var n1 = prompt("첫 번째 숫자를 입력하세요");
		var n2 = prompt("두 번째 숫자를 입력하세요");
    var result = addNumber(n1, n2);
    document.write("두 수를 더 한 값 : " + result);
	</script>	

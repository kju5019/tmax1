<body>
	<h2>3의 배수 찾기</h2>
	<script>
	var number = prompt("숫자를 입력하세요.");
	var count = 0;
	
	if(number !== null){
		for(i=1; i<= number; i++){
			if((i % 3 == 0)){
				document.write(i+", ");
				count += 1;
			}			
		}				
	}
	
	
	</script>
</body>
